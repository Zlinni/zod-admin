{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "auto-imports.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.tsx",
    "src/**/*/*.tsx"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "lib": ["ES2022"],
    "composite": true,
    "baseUrl": ".",
    "allowImportingTsExtensions": true,
    "paths": {
      "@/*": ["./src/*"],
      "@Admin/*": ["./src/views/Module/Admin/*"],
      "@core/*": ["./src/core/*"]
    },
    "types": ["naive-ui/volar"]
  }
}
